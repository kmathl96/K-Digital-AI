package chap6;

class Account {
	String account_number;
	String name;
	int balance;
	
	public void deposit(int amount) {
		if (amount>0) {
			balance += amount;
		}
	}
	public void withdraw(int amount) {
		if (balance >= amount) {			
			balance -= amount;
		} else {
			System.out.println("ÀÜ¾× ºÎÁ·");
		}
	}
}

