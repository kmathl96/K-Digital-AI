package chap6;

public class Person {
	String name;
	int age;
	
	public Person() {
		this.name = "none";
		this.age = 0;
	}
	public Person(String name, int age) {
		// 객체의 필드명과 함수의 매개변수명이 같으므로 객체의 필드명 앞에 this를 붙여야 함
		this.name = name;
		this.age = age;
	}
	public Person(String name) {
		// 객체의 필드명과 함수의 매개변수명이 같으므로 객체의 필드명 앞에 this를 붙여야 함
		this.name = name;
		this.age = 0;
	}
	public Person(int age) {
		// 객체의 필드명과 함수의 매개변수명이 같으므로 객체의 필드명 앞에 this를 붙여야 함
		this.name = "none";
		this.age = age;
	}
	
 	public String info() {
		return "이름: "+name+", 나이: "+age;
	}
}