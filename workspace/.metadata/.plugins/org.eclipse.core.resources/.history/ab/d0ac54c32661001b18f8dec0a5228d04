import emp.Employee;

public class Company {
	public static void main(String[] args) {
		Employee e1 = new Employee("1001","김과장",3000000);
		Employee e2 = new Employee("1002","박대리",2000000);
		Employee e3 = new Employee("1003","홍차장",4000000);
		System.out.println(e1.info()); // 사번:1001, 이름:김과장, 급여:3000000
		System.out.println(e2.info()); // 사번:1002, 이름:박대리, 급여:2000000
		System.out.println(e3.info()); // 사번:1003, 이름:홍차장, 급여:4000000
		System.out.println(e1.getPay()); // 3000000
		System.out.println(e2.getPay()); // 2000000
		System.out.println(e3.getPay()); // 4000000
	}
}