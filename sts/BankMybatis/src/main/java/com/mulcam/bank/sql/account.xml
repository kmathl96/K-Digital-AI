<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
							"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.account">
	<select id="selectAccount" resultType="com.mulcam.bank.bean.Account" parameterType="String">
		<![CDATA[
		select * from accountw
		where
		id=#{id}
		]]>
	</select>
	<select id="selectAllAccountList" resultType="com.mulcam.bank.bean.Account">
		<![CDATA[
		select * from accountw
		]]>
	</select>
	<insert id="insertAccount" parameterType="com.mulcam.bank.bean.Account">
		<![CDATA[
		insert into accountw(id,name,balance,sect,grade)
		values(#{id},#{name},#{balance},#{sect},#{grade})
		]]>
	</insert>
	<update id="updateAccount" parameterType="com.mulcam.bank.bean.Account">
		<![CDATA[
		update accountw
		set balance=#{balance}
		where id=#{id}
		]]>
	</update>
</mapper>
